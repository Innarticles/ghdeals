<div class="container top">

  <div class="row">
    <% if @promos.empty? %>
   <div class="col-sm-8 col-sm-offset-2"><h2>OOOPS! there are no discounts. Please try another search.</h2></div>
    <% else %>
    <% @promos.reverse.each do |promo| %>
    <div class="col-md-4">
      <div class="card">
        <!-- <div class="card-image waves-effect waves-block waves-light">

          <%#= image_tag promo.image, class: "activator"%>

        </div> -->
        <div class="">
          <%= image_tag promo.image(:preview) %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= promo.product %><i class="fa fa-ellipsis-v repairI"></i></span>
          <br>
          <%= promo.shop %>
          <br>
          <%= promo.location %>
          <br>
          <div align="right">
           <div id="discount-rate"><span><%= promo.discount %> %&nbsp;</span>Off</div>
           <br>
           <%= promo.normal_price %>
         </div>
         

       </div>
       <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= promo.product %> <i class="fa fa-times repairI"></i></span>
        <br>
        <p><%= promo.description %></p>
        <h5>Contact</h5>
        <%= promo.contact %>
        <!-- <div id="loc-value">
          <%#= promo.location %>
        </div> -->

        <%#= link_to (image_tag('marker.png', size: '40x40')), '#mapmodals', 'data-toggle' => 'modal' %>
        <br>
        <br>
        <div align="center">
           <%# if can? :update, promo %> 
              <%= link_to 'Delete',
              promo_path(promo),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
            <%# end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <br>
  <% end %>
</div>
</div>