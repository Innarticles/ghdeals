<div class="jumbotron">
  <h1> 
      Welcome!
    </h1>
      
  <div class="row-fluid">
    <% if current_user.check_promo?%>  
    <div class="col-md-4">
      <%= link_to "View your current promos", promos_user_promos_path, :class => "btn btn-info" %>
    </div>
    <div class="col-md-4">
      <%= link_to "Create a new promo", new_promo_path, :class => "btn btn-success" %>
    </div>
    <div class="col-md-4">
      <%= link_to "Edit Registration Details", edit_user_registration_path, :class => "btn btn-danger" %>
    </div>
    <% else %>
      <h4>You don't have any promos yet</h4>
        <div class="col-md-4">
        <%= link_to "Create a new promo", new_promo_path, :class => "btn btn-success" %>
        </div>
        <div class="col-md-4">
        <%= link_to "Edit Registration Details", edit_user_registration_path, :class => "btn btn-danger" %>
        </div>
      <%end%>
  </div>
    
</div>




      